@model LoginViewModel

@{
    Layout = "_AuthCenterLayout";
    ViewData["Title"] = "Login";
}

<section id="signin">
    <div class="section-content">
        <div class="section-header">
            <h1 class="h2">@ViewData["Title"]</h1>
        </div>
        <div class="section-body">
            <form method="post" asp-controller="Auth" asp-action="Login" novalidate>
                <div class="form-group">
                    <label class="form-label" asp-for="Email"></label>
                    <input class="form-input" asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Password"></label>
                    <input class="form-input" asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>

                <div class="form-checkbox-group">
                    <label class="form-checkbox">
                        <input asp-for="RememberMe" class="form-checkbox-input" />
                        <span class="form-checkbox-box"></span>
                    </label>
                    <label asp-for="RememberMe" class="form-label">Remember me<a href="#">Terms and Conditions</a></label>
                </div>

                <div class="error-message">
                    @ViewBag?.ErrorMessage
                </div>
                <button type="submit" class="btn btn-blue btn-submit">Log in</button>
            </form>
        </div>
        <div class="section-footer">
            <span>Don't have an account?</span>
            <a asp-action="Register" asp-controller="Auth">Sign up</a>
        </div>
    </div>
</section>