
@model AddProjectViewModel


<div id="addProjectsModal" class="modal" data-type="modal">
    <div class="modal-content">
        <header class="modal-header">
            <h3>Add Project</h3>
            <button data-close="true" type="button" class="btn-close" data-target="#addProjectsModal"></button>
        </header>

        <main class="modal-body">
            <form novalidate method="post" asp-action="Add" asp-controller="Projects">

                <div class="form-group">
                    <label asp-for="ProjectName"></label>
                    <div class="field-group">
                        <input asp-for="ProjectName" />
                        <span asp-validation-for="ProjectName" ></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="ClientId"></label>
                    <div class="field-group">
                        <input asp-for="ClientId" />
                        <span asp-validation-for="ClientId"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Description"></label>
                    <div class="field-group">
                        <textarea asp-for="Description" rows="4" cols="50"></textarea>
                        <span asp-validation-for="Description"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="StartDate"></label>
                    <div class="field-group">
                        <input asp-for="StartDate" />
                        <span asp-validation-for="StartDate"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="EndDate"></label>
                    <div class="field-group">
                        <input asp-for="EndDate" />
                        <span asp-validation-for="EndDate"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Budget"></label>
                    <div class="field-group">
                        @* Got help from chatgpt with this input field to make sure user can't add letters. 
                            Min will set the minimum to 0, can't be lower. 
                            Step is the increment for the side arrows. 
                            Oninput removes letters. 
                        *@
                        <input asp-for="Budget" type="number" step="0.01" min="0" oninput="this.value = this.value.replace(/[^0-9.]/g, '')" />
                        <span asp-validation-for="Budget"></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-blue btn-submit">Create</button>

            </form>

        </main>
    </div>
</div>
